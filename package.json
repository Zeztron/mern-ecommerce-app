{
  "name": "proshop",
  "version": "1.0.0",
  "description": "MERN shopping app",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "server": "ts-node-dev --project server/tsconfig.json --respawn --transpile-only server/src/index.ts",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build-ts": "tsc -p server",
    "data:import": "node server/seeder",
    "data:destroy": "node server/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build-ts && npm install --prefix client && npm run build --prefix client"
  },
  "author": "Harsh Patel",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
